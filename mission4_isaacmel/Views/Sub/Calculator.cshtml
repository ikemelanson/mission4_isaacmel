@{
    ViewData["Title"] = "Homepage";
}
@model CalculatorModel;

<h4>Grade Calculator:</h4>

<!--a form to calcualte your grade based on percentatges in differnt categories-->
<form method="post">

    <label>Assignments</label>
    <input type="number" id="assignments" step="1" asp-for="Assignments" /><br />

    <label>Group Project</label>
    <input type="number" id="group" step="1" asp-for="Group"/><br />

    <label>Quizzes</label>
    <input type="number" id="quiz" step="1" asp-for="Quizzes"/><br />

    <label>Midterm Exam</label>
    <input type="number" id="mid" step="1" asp-for="Midterm"/><br />

    <label>Final Exam</label>
    <input type="number" id="final" step="1" asp-for="Final"/><br />

    <label>INTEX</label>
    <input type="number" id="intex" step="1" asp-for="Intex"/><br />

    <button type="submit" onclick="calcGrades()">Calculate Grade</button><br />

    <div asp-validation-summary="All"></div>
</form>

    <label>Final Grade:</label>
    <input type="text" readonly id="output" />
<script src="~/js/main.js"></script>